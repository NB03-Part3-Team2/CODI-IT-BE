{
  "name": "codi-it",
  "version": "1.0.0",
  "description": "codi-it backend repository",
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node ./dist/main.js",
    "dev": "nodemon --watch src --exec tsx ./src/main.ts",
    "build": "tsc",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "seed": "tsx -r tsconfig-paths/register prisma/seed.ts",
    "jest:test": "dotenv -e .env.test -- npm run prisma:migrate && dotenv -e .env.test -- jest --runInBand --coverage",
    "jest:ci-test": "jest --runInBand --coverage --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NB03-Part3-Team2/CODI-IT-BE.git"
  },
  "_moduleAliases": {
    "@errors": "dist/errors",
    "@middlewares": "dist/middlewares",
    "@modules": "dist/modules",
    "@routes": "dist/routes",
    "@utils": "dist/utils",
    "@shared": "dist/shared"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "argon2": "^0.44.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^10.0.0",
    "express": "^5.1.0",
    "express-jwt": "^8.5.1",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "multer": "^2.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^6.18.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.3",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.2"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts",
    "schema": "prisma/schema.prisma"
  }
}
